{
  "compilerOptions": {
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": false,
    "lib": [
      "dom",
      "es2016",
      "es2017.object",
      "es2015.promise"
    ],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strict": false,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true
  },
  "exclude": [
    "android",
    "ios",
    "build"
  ],
  "include": [
    "./**/*"
  ]
}
