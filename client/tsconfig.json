{
  "compilerOptions": {
    "outDir": "artifacts",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2016",
      "es2017.object",
      "esnext"
    ],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strict": false,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "./src/constants/*",
    "./src/redux"
  ],
  "include": [
    "./src/**/*"
  ]
}
